%h1 Editing profile

= form_for @profile do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg
          
  .field
    = f.label :name
    = f.text_field :name  
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'

  -# Hidden fields for holding upload data
  =f.hidden_field :logo_file_name
  =f.hidden_field :logo_file_size
  =f.hidden_field :logo_content_type
  =f.hidden_field :logo_file_path

= render 'upload'

= link_to 'Back', root_path
