= s3_uploader_form 	acl: 'private',
					callback_param: "direct_upload_url",
					max_file_size: 5.megabytes,
					id: "s3-uploader" do
  = file_field_tag :file, multiple: false

%script#template-upload{type: "text/x-tmpl"}
  .upload{id: 'file-{%=o.unique_id%}'}
    {%=o.name%}
    .progress
      .bar{style: "width: 0%"}

#uploads{'data-reveal'.to_sym => 'true'}
  %h1
    Uploading...

