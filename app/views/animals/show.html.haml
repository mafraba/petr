%p
  %b Name:
  = @animal.name
%p
  %b Sex:
  = @animal.sex
%p
  %b Birthdate:
  = @animal.birthdate
%p
  %b Organisation:
  = @animal.organisation.email
%p
  %b Description:
  = @animal.description

- if can? :edit, @animal
  = link_to 'Edit', edit_animal_path(@animal), id: 'edit-animal-link'
  = button_to 'Delete', animal_path(@animal), id: 'delete-animal-button', method: :delete
= link_to 'Back', animals_path
